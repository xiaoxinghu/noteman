#!/usr/bin/env ruby

require 'gli'
require 'noteman'

noteman = Noteman.new

include GLI::App

program_desc 'A CLI note manager.'

command :hi do |c|
	c.action do |global_options,options,args|
		noteman.hi
	end
end

desc 'Show Cheatsheets'
arg_name 'cheatsheet topic'
command :cs do |c|
	c.action do |global_options,options,args|
		if args.length > 0
			args.each do |arg|
				noteman.get_cheatsheets arg
			end
		else
			noteman.get_cheatsheets
		end
	end
end

exit run(ARGV)
