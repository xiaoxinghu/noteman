#!/usr/bin/env ruby

require 'gli'
require 'noteman/cheat_man'

include GLI::App

program_desc 'A CLI note manager.'

command :hi do |c|
  c.action do |global_options,options,args|
    puts 'hi'
  end
end

desc 'Show Cheatsheets'
arg_name 'tags'
command :cheat do |c|
  c.action do |global_options,options,args|
    man = Noteman::CheatMan.new
    man.show *args
  end
end

exit run(ARGV)
